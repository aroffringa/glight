FROM ubuntu:22.04

RUN export DEBIAN_FRONTEND=noninteractive && apt-get update && \
    apt-get install -y \
    clang-format \
    cmake \
    file \
    g++ \
    libasound2-dev \
    libaubio-dev \
    libboost-test-dev \
    libflac++-dev \
    libgtkmm-3.0-dev \
    libola-dev \
    libxml2-dev \
    lsb-release

ADD . /src
WORKDIR /src

ENV CI=True

RUN \
  mkdir /build && \
  cd /build && \
  cmake ../src && \
  make package -j`nproc` && \
  apt-get install ./glight-0.9.0-Linux.deb
